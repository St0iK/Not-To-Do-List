<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-dismissable alert-danger">
     <h4>The form contains <%= pluralize(@user.errors.count, "error") %>.</h4>

    
    	<ul>
    		<% @user.errors.full_messages.each do |msg| %>
      			<li>* <%= msg %></li>
    		<% end %>
    	</ul>
    </div>
   
   
  </div>
<% end %>