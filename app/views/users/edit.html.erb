<% provide(:title,"Update account settings") %>

<div class="bs-docs-section">
        <div class="page-header">
          <div class="row">
            <div class="col-lg-12">
             <h1>Update account settings</h1>
            </div>
          </div>
        </div>

      </div>

<div class="row">
   <%= render 'shared/error_messages' %>
   <div class="well">
    <%= form_for @user, html: {class: "bs-example form-horizontal"} do |f| %>
      <fieldset>
      <legend>Legend</legend>

      <div class="form-group">
         <%= f.label :name, :class => 'col-lg-2 control-label' %>
         <div class="col-lg-10">
            <%= f.text_field :name, :class => 'form-control',:placeholder => 'Name' %>
         </div>  
      </div>
      

      <div class="form-group">
         <%= f.label :email, :class => 'col-lg-2 control-label' %>
         <div class="col-lg-10">
            <%= f.text_field :email, :class => 'form-control',:placeholder => 'email' %>
         </div>  
      </div>

      <div class="form-group">
         <%= f.label :password, :class => 'col-lg-2 control-label' %>
         <div class="col-lg-10">
            <%= f.password_field :password, :class => 'form-control',:placeholder => 'password' %>
         </div>  
      </div>

      <div class="form-group">
         <%= f.label :password_confirmation, :class => 'col-lg-2 control-label' %>
         <div class="col-lg-10">
            <%= f.password_field :password_confirmation, :class => 'form-control',:placeholder => 'password_confirmation' %>
         </div>  
      </div>
      <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Save", class: "btn btn-large btn-primary" %>        
      </div>   
         <%= gravatar_for @user %>
          <a href="http://gravatar.com/emails">change</a>
      </div>
       </fieldset>
    <% end %>
  </div>
 
</div>